<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keypad_table"
        android:stretchColumns="*">

        <TableRow>
            <Button android:text="1" android:id="@+id/button_1" android:background="@drawable/sudoku_tile"/>
            <Button android:text="2" android:id="@+id/button_2"  android:background="@drawable/sudoku_tile"/>
            <Button android:text="3" android:id="@+id/button_3"   android:background="@drawable/sudoku_tile"/>
        </TableRow>
        <TableRow>
            <Button android:text="4" android:id="@+id/button_4"  android:background="@drawable/sudoku_tile"/>
            <Button android:text="5" android:id="@+id/button_5"  android:background="@drawable/sudoku_tile"/>
            <Button android:text="6" android:id="@+id/button_6"  android:background="@drawable/sudoku_tile"/>
        </TableRow>
        <TableRow>
            <Button android:text="7" android:id="@+id/button_7"  android:background="@drawable/sudoku_tile"/>
            <Button android:text="8" android:id="@+id/button_8"   android:background="@drawable/sudoku_tile"/>
            <Button android:text="9" android:id="@+id/button_9"  android:background="@drawable/sudoku_tile"/>
        </TableRow>

        </TableLayout>


</RelativeLayout>